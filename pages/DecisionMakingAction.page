<apex:page standardController="Project__c">
	<style>
		.wrapper {
		    padding: 0 100px;	
		}
		.action {
		    display: inline-block;
		    width: 40%;
		    float: left;
		    cursor: pointer;
		    margin: 10px 0;
		    padding-left: 10%;
		}
		.action .icon {
    		width: 60px;
		    display: inline-block;
		    height: 60px;
		    float: left;
		    margin-right: 15px;
		}
		.action .description {
			font-size: 16px;
		    display: table-cell;
		    height: 60px;
		    vertical-align: text-top;
		    vertical-align: middle;
		    width: 300px;
		}
	</style>
	<main class="wrapper">
		<a href="" class="action">
			<apex:image styleClass="icon" url="{!URLFOR($Resource.Icons, 'icons/people.png')}"/>
